<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/trasparent"
    android:onClick="closeActivity"
    android:clickable="true"
    tools:context=".ManageGroupDialog">

    <RelativeLayout
        android:id="@+id/group_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="@drawable/abc_popup_background_mtrl_mult">

        <org.lucasr.twowayview.TwoWayView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/group_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/TwoWayView"
            android:drawSelectorOnTop="false"
            tools:context=".ManageGroupDialog"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/finder_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:layout_below="@id/group_rl"
        android:background="@drawable/abc_popup_background_mtrl_mult">

        <ImageView
            android:id="@+id/find_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/abc_ic_search_api_mtrl_alpha"
            android:backgroundTint="@color/background_material_dark" />

        <EditText
            android:id="@+id/find_contact_edt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="@string/find_contact"
            android:textColorHint="@color/gray"
            android:background="@color/trasparent"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/find_iv"
            android:layout_toStartOf="@+id/find_iv" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_below="@id/finder_rl"
        android:background="@drawable/abc_popup_background_mtrl_mult">
        <ListView
            android:id="@+id/contact_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"/>
    </RelativeLayout>

</RelativeLayout>

