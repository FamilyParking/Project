<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/black_strong_transparent"
                android:endColor="@color/black_light_transparent"
                android:angle="270"/>

            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_light_light_transparent"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>